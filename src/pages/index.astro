---
import Main from "../layouts/Main.astro";
import Loader from "../components/Loader.astro";
import Navbar from "../components/Navbar.astro";
import Swiper from "../components/swiper.astro";
import Page1 from "../components/Pages/Page1.astro";
import Page2 from "../components/Pages/Page2.astro";
import Page3 from "../components/Pages/Page3.astro";
import Page4 from "../components/Pages/Page4.astro";
import Page5 from "../components/Pages/Page5.astro";
import Footer from "../components/Footer.astro";
import Featured from "../components/Featured.astro";
---

<Main>
  <div id="main">
    <Loader />
    <div id="page1">
      <div id="cursor">
        <h3>Play Reel</h3>
      </div>
      <video autoplay muted loop src="/videos/RJ-2.0-Video background .mp4"
      ></video>
    </div>
    <Navbar />
  </div>
  <Page1 />
  <Page2 />
  <Page3 />
  <Page4 />
  <Featured />
  <Page5 />

  <div id="page6-content">
    <h1>Get In touch.</h1>
    <hr />

    <!-- Swiper -->

    <Swiper />
  </div>
  <Footer />
</Main>

<!-- Page-specific scripts -->
<script
  is:inline
  src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.4/gsap.min.js"
