<style>
  .featured-projects {
    padding: 2rem 0;
    /* background-color: #fff; */
  }

  .container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  .title {
    font-size: 3.5rem;
    font-weight: 400;
    margin-bottom: 2rem;
    font-family:
      system-ui,
      -apple-system,
      BlinkMacSystemFont,
      "Segoe UI",
      Roboto,
      sans-serif;
  }

  .divider {
    height: 1px;
    background-color: #e5e5e5;
    margin-bottom: 2rem;
  }

  .projects-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    margin-top: 2rem;
    position: relative;
  }

  .project-item {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .project-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 1rem;
    font-weight: 500;
  }

  .dot {
    width: 8px;
    height: 8px;
    background-color: #000;
    border-radius: 50%;
    display: inline-block;
  }

  .project-card {
    border-radius: 1rem;
    overflow: hidden;
    aspect-ratio: 16/10;
  }

  .fyde {
    background-color: #f3f3f3;
  }

  .vise {
    background-color: #1a1a1a;
  }

  .project-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: all 0.5s;
  }
  .project-image:hover {
    scale: 0.9;
    transition: all 0.5s;
  }

  #fydeText {
    position: absolute;
    transform: translate(-50%, -50%);
    top: 50%;
    left: 50%;
    z-index: 10;
    font-weight: 900;
    color: #ff5f38;
    font-size: 4rem;
  }

  @media (max-width: 768px) {
    .projects-grid {
      grid-template-columns: 1fr;
    }

    .title {
      font-size: 2.5rem;
    }

    .container {
      padding: 0 1rem;
    }
  }
</style>
<section class="featured-projects">
  <div class="container">
    <h1 class="title">Featured Projects</h1>
    <div class="divider"></div>

    <div class="projects-grid">
      <div
        class="project-item"
        onmouseover="showLeft()"
        onmouseout="hideLeft()"
      >
        <div class="project-label">
          <span class="dot"></span>
          FYDE
        </div>
        <div class="project-card fyde">
          <img
            src="/images/FYDE.png"
            alt="FYDE Project Interface"
            class="project-image"
          />
        </div>
      </div>
      <h1 id="fydeText">FYDE</h1>
      <div
        class="project-item"
        onmouseover="showRight()"
        onmouseout="hideRight()"
      >
        <div class="project-label">
          <span class="dot"></span>
          VISE
        </div>
        <div class="project-card vise">
          <img
            src="/images/VISE.jpg"
            alt="VISE Project Interface"
            class="project-image"
          />
        </div>
      </div>
    </div>
  </div>
</section>

<script is:inline>
  function showLeft() {
    const fydeText = document.getElementById("fydeText");
    fydeText.style.opacity = 1; // Make it visible
    fydeText.innerHTML = "FYDE"; // Set the inner HTML
  }

  function hideLeft() {
    const fydeText = document.getElementById("fydeText");
    fydeText.style.opacity = 0; // Make it hidden
  }

  function showRight() {
    const fydeText = document.getElementById("fydeText");
    fydeText.style.opacity = 1; // Make it visible
    fydeText.innerHTML = "VISE"; // Set the inner HTML
  }

  function hideRight() {
    const fydeText = document.getElementById("fydeText");
    fydeText.style.opacity = 0; // Make it hidden
  }
</script>
